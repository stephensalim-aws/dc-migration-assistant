<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="aws-migration-plugin" location="i18n/aws-migration-plugin"/>
    
    <servlet key="aws-migration-plugin-servlet" name="AWS Migration Servlet"
             class="com.aws.apn.migration.awsmigrationplugin.TemplateServlet">
        <url-pattern>/aws-migration-plugin*</url-pattern>
    </servlet>

    <web-resource key="aws-migration-plugin-templates" name="AWS Migration Plugin Soy Templates">
        <resource type="soy" name="aws-migration-plugin.soy" location="/templates/aws-migration-plugin.soy"/>
        <dependency>com.atlassian.auiplugin:soy</dependency>
        <dependency>com.atlassian.soy.soy-template-plugin:soy-deps</dependency>
    </web-resource>

    <web-item key="refapp-menu-item" name="Refapp AWS Migration Plugin" section="system.admin/general" weight="10"
              application="refapp">
        <label>AWS Migration Plugin</label>
        <label key="awsmigrationplugin.title"/>
        <link linkId="awsmigrationplugin">/plugins/servlet/aws-migration-plugin</link>
    </web-item>

    <web-item key="jira-menu-item" name="Jira AWS Migration Plugin" section="advanced_menu_section/advanced_section"
              weight="200"
              application="jira">
        <label key="awsmigrationplugin.title"/>
        <description>AWS Migration Plugin</description>
        <link linkId="awsmigrationplugin">/plugins/servlet/aws-migration-plugin</link>
    </web-item>

    <web-item key="bitbucket-menu-item" name="Bitbucket AWS Migration Plugin" section="atl.admin/admin-support-section"
              weight="10"
              application="bitbucket">
        <label key="awsmigrationplugin.title"/>
        <description>AWS Migration Plugin</description>
        <link linkId="awsmigrationplugin">/plugins/servlet/aws-migration-plugin</link>
    </web-item>

    <web-item key="confluence-menu-item" name="Confluence AWS Migration Plugin" section="system.admin/administration"
              weight="10"
              application="confluence">
        <label key="awsmigrationplugin.title"/>
        <description>AWS Migration Plugin</description>
        <link linkId="awsmigrationplugin">/plugins/servlet/aws-migration-plugin</link>
    </web-item>

    <rest name="AWS Migration Resource" i18n-name-key="aws.migration.rest.name" key="aws-migration-rest" path="/aws-migration" version="1.0">
        <description key="aws.migration.rest.description">The AWS migration plugin rest API</description>
    </rest>
</atlassian-plugin>