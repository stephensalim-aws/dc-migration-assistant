<?xml version="1.0" encoding="UTF-8"?>

<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
        <param name="plugin-icon">images/AWS_logo.png</param>
        <param name="plugin-logo">images/AWS_logo.png</param>
    </plugin-info>
    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="serverPlugin"/>
    <!-- add our web resources -->
    <web-resource key="serverPlugin-resources" name="AWS Data Migration Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        <resource type="download" name="serverPlugin.css" location="/css/serverPlugin.css"/>
        <resource type="download" name="serverPlugin.js" location="/js/serverPlugin.js"/>
        <resource type="download" name="admin-ui-plugin.css" location="/css/admin-ui-plugin.css"/>
        <resource type="download" name="admin-ui-plugin.js" location="/js/admin-ui-plugin.js"/>
        <resource type="download" name="images/" location="/images"/>
        <context>serverPlugin</context>
    </web-resource>
    <web-section name="migrationSection" i18n-name-key="migration-section.name" key="migration-section"
                 location="migration-item-link" weight="1000">
        <description key="migration-section.description">The Migration Plugin</description>
        <label key="migration-section.label"/>
    </web-section>
    <web-item name="Migrate to Jira DC on AWS" i18n-name-key="migration-item.name" key="migration-item"
              section="top_system_section/import_export_section" weight="1000">
        <description key="migration-item.description">The AWS Migration Plugin</description>
        <label key="migration-item.label"/>
        <link linkId="migration-admin-link">/plugins/servlet/aws/start</link>
    </web-item>

    <rest key="rest" path="/migration-admin" version="1.0">
        <description>Provides REST resources for the admin UI.</description>
    </rest>
    <servlet key="admin-servlet" class="com.aws.apn.migration.serverPlugin.adminUI.AdminServlet">
        <url-pattern>/aws/start</url-pattern>
    </servlet>
    <servlet key="dashboard-servlet" class="com.aws.apn.migration.serverPlugin.adminUI.DashboardServlet">
        <url-pattern>/aws/dashboard</url-pattern>
    </servlet>
    <servlet key="cloudformation-servlet"
             class="com.aws.apn.migration.serverPlugin.adminUI.DeployCloudformationServlet">
        <url-pattern>/aws/cloudformation</url-pattern>
    </servlet>

    <webwork1 key="cloudformationDeployment" name="Deploy CloudFormation Environment" class="java.lang.Object">
        <actions>
            <action name="com.aws.apn.migration.serverPlugin.action.CreateCloudFormation" alias="QuickCreateUserIssue">
                <view name="createenvironment">cloudformation.vm</view>
            </action>
        </actions>
    </webwork1>

</atlassian-plugin>
